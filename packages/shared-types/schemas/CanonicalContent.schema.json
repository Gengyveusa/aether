        "aboutShort": {
          "type": "string",
          "default": ""
        },
        "aboutLong": {
          "type": "string",
          "default": ""
        },
        "faq": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string",
                "minLength": 1
              },
              "answer": {
                "type": "string",
                "minLength": 1
              },
              "proofIds": {
                "type": "array",
